    .container
      h1 NATIONAL GEOGRAPHIC РОССИЯ
      .about__header_information
       .about__header_picture
         img(src='/assets/img/journ3.png')
         .monik__absolute_single
           .monik__obloj_project
             img(src='/assets/img/logo.jpg')
           img(src='/assets/img/monik_main.png')
       .about__header_details
         .info__counts-wrapper
           .info__count
             .info__count_title 140 000
             p экземпляров  в тираже
           .info__count

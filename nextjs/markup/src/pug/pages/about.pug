         .socials
           a(href='#')
             img(src='/assets/img/icons/socials/fb.svg')
           a(href='#')
             img(src='/assets/img/icons/socials/vk.svg')
           a(href='#')
             img(src='/assets/img/icons/socials/inst.svg')
           a(href='#')
             img(src='/assets/img/icons/socials/twit.svg')
           a(href='#')
